<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Yodaz.View.QuizPage"
    xmlns:vm="clr-namespace:Yodaz.ViewModel;assembly=Yodaz"
    Title="QuizPage">
    <ContentPage.BindingContext>
        <vm:QuizViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
       <StackLayout>   
        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="Center" Margin="0, 100" >
<!--            <Label Text="{Binding Number}" FontSize="40" HorizontalOptions="Center" />-->
            <Label Text="{Binding Question}" FontSize="40" HorizontalOptions="Center" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0, 50">
                <Button Text="TRUE" FontSize="40" Padding="20" Command="{Binding AnswerCommand}" CommandParameter="true"/>
                <Button Text="FALSE" FontSize="40" Padding="20" Command="{Binding AnswerCommand}" CommandParameter="false"/>
            </StackLayout>
                 <Label Text="{Binding Result}" FontSize="20"/>  
        </StackLayout>
               <StackLayout VerticalOptions="End" HorizontalOptions="Center" Orientation="Horizontal" Margin="0,0,0,20">
                <Label Text="Score: " FontSize="40"/> 
                <Label Text="{Binding Score}" FontSize="40"/> 
            </StackLayout>   
       </StackLayout> 
    </ContentPage.Content>
</ContentPage>