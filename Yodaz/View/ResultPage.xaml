<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Yodaz.View.ResultPage"
             xmlns:vm="clr-namespace:Yodaz.ViewModel;assembly=Yodaz"
             Title="ResultPage"
             NavigationPage.HasBackButton="false">
    <ContentPage.BindingContext>
        <vm:ResultViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="button" TargetType="Button">
                <Setter Property="TextColor" Value="#B8BFBF"/>
                <Setter Property="BorderRadius" Value="6"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="BackgroundColor" Value="#A45BB2"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="{Binding ResultText}" FontSize="40" HorizontalOptions="Center"/>
        <Label Text="{Binding FinalScore}" FontSize="40" HorizontalOptions="Center"/>
        <Button Text="Play Again" Style="{StaticResource button}" Command="{Binding PlayCommand}"/>
    </StackLayout>
</ContentPage>
